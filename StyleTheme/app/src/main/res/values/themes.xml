<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StyleTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">  <!-- splash screen don't have so we -->
        <!-- Primary brand color. -->                                                         <!-- can do NoActionBar. -->
        <item name="colorPrimary">#FD6535</item>
        <item name="colorPrimaryVariant">#08050E</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F0F4EB</item>
        <item name="android:background">#8BC34A</item>
    </style>


</resources>